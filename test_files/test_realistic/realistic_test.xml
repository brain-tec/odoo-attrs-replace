<odoo>

    <record id="planning_view_gantt" model="ir.ui.view">
        <field name="name">planning.slot.gantt.inherit.planning</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning.planning_view_gantt"/>
        <field name="arch" type="xml">
            <gantt position="attributes">
                <attribute name="color">gantt_color</attribute>
            </gantt>
        </field>
    </record>

    <record id="planning_view_form" model="ir.ui.view">
        <field name="name">planning.slot.form.inherit.planning</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning.planning_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@role='alert']" position="before">
                <header>
                    <button class="btn-primary" name="action_set_to_done" type="object" string="Mark as Done"
                            attrs="{'invisible': [('is_done', '=', True)]}"/>
                    <button class="btn-secondary" name="action_set_to_open" type="object" string="Mark as Open"
                            attrs="{'invisible': [('is_done', '=', False)]}"/>
                    <button class="btn-primary" name="action_duplicate_planning_slot" type="object"
                            string="Duplicate planning"/>
                </header>
            </xpath>
            <field name="is_assigned_to_me" position="before">
                <field name="is_done" invisible="1"/>
                <widget name="web_ribbon" title="Done" bg_color="bg-success"
                        attrs="{'invisible': [('is_done', '=', False)]}"/>
                <widget name="web_ribbon" title="Open" bg_color="bg-info"
                        attrs="{'invisible': [('is_done', '=', True)]}"/>
            </field>
            <form position="inside">
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
